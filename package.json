{
  "name": "split-scan-telegram-bot",
  "module": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "migrate": "db-migrate up --config src/configs/database.json --migrations-dir src/migrations",
    "migrate:undo": "db-migrate down --config src/configs/database.json --migrations-dir src/migrations",
    "migrate:create": "db-migrate create $1 --config src/configs/database.json --migrations-dir src/migrations && npm run rename-migration",
    "rename-migration": "for f in ./src/migrations/*.js; do mv \"$f\" \"${f%.js}.cjs\"; done"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "type": "module",
  "dependencies": {
    "db-migrate": "^0.11.14",
    "db-migrate-mysql": "^3.0.0",
    "openai": "^5.19.1",
    "telegraf": "^4.16.3"
  }
}
